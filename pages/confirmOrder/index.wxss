/* pages/confirmOrder/index.wxss */

.confirm-order-wrapper {
  background-color: #f5f5f5;
  height: 100vh;
  padding-top: 20rpx;
}

.content {
  background-color: #fff;
  border-radius: 23rpx;
  box-shadow: 4rpx 4rpx 4rpx 4rpx #f5f5f5;
  width: 86%;
  margin: 20rpx auto;
  padding: 20rpx;
}

/* .address-content */

.order-content .icon {
  width: 42rpx;
  height: 42rpx;
  margin-right: 10rpx;
}

.con-item {
  width: 100%;
  padding: 18rpx 0;
  align-items: flex-start;
}

.con-item .photo {
  width: 27%;
  height: 148rpx;
  border-radius: 10rpx;
}

.con-item .con-right {
  width: 70%;
  padding-left: 14rpx;
}

.price-box {
  justify-content: space-between;
  font-size: 14px;
  color: #999;
  margin-top: 60rpx;
}

.price {
  color: rgb(240, 20, 20);
}

.footer-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  justify-content: space-between;
  line-height: 80rpx;
}

.footer-left {
  padding-left: 20rpx;
}

.btn {
  background-color: #22ab39;
  width: 26%;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
}
