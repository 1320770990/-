/**index.wxss**/

.home-wrapper {
  height: 100vh;
  position: relative;
}

.logo-wrapper {
  width: 100%;
  position: absolute;
  left: 50%;
  top: 40%;
  transform: translate(-50%, -50%);
}

button {
  width: 80% !important;
  background-color: #1296db;
  color: #fff;
  margin: 50rpx auto 0;
  border-radius: 60rpx !important;
  font-weight: 400;
}
.toast {
  padding: 20rpx 0;
}

.toast-top {
  padding: 20rpx;
  font-weight: 600;
}

.btn-box button {
  margin: 10rpx;
  width: 42% !important;
  font-weight: 400;
}

.btn-box button:first-child {
  background-color: #f5f5f5;
  color: #666;
}