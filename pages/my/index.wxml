<view class="mine-wrapper">
  <view class="mine-top flex">
    <block wx:if="{{isUser}}">
      <view class="avator">
        <open-data type="userAvatarUrl"></open-data>
      </view>
      <view class="name">
        <open-data type="userNickName"></open-data>
      </view>
    </block>
    <block wx:else>
      <image src="../../image/user.png" class="avatar"></image>
      <view class="right">
        <view class="mine-name">未登录</view>
        <view class="subtitle" bindtap="signOut">点击账号登录</view>
      </view>
    </block>
  </view>

</view>