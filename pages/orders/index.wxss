/* pages/orders/index.wxss */

.order-wrapper {
  background-color: #f5f5f5;
  height: 100vh;
  padding-top: 20rpx;
}

.tips {
  text-align: center;
  color: #999;
  line-height: 100rpx;
  font-size: 30rpx;
}

.tips-box {
  width: 100%;
  position: absolute;
  left: 50%;
  top: 40%;
  transform: translate(-50%, -50%);
}

.btn {
  text-align: center;
}

.content {
  background-color: #fff;
  border-radius: 23rpx;
  box-shadow: 4rpx 4rpx 4rpx 4rpx #f5f5f5;
  width: 86%;
  margin: 20rpx auto;
  padding: 20rpx;
}

.order-content .icon {
  width: 42rpx;
  height: 42rpx;
  margin-right: 10rpx;
}

.con-item {
  width: 100%;
  padding: 18rpx 0;
  align-items: flex-start;
}

.con-item .photo {
  width: 27%;
  height: 148rpx;
  border-radius: 10rpx;
  background-color: #ccc;
}

.con-item .con-right {
  width: 70%;
  padding-left: 14rpx;
  line-height: 50rpx;
  font-size: 28rpx;
}
